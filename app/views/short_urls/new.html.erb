<div class="row center-element">
  <div class="col-md-8">
    <%= form_for(@short_url) do |f| %>
      <div class="form-group">
        <h2>Enter your url</h2>
        <br/>
        <%= f.text_field :url, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
